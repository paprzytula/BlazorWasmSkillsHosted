<div class="individual-category-container">
    <a href="@categoryUrl">
        <img src="@Category.Image" alt="@Category.CategoryName" class="category-image" />
    </a>
    <p><a href="@categoryUrl">@Category.CategoryName</a></p>
    <div>
        <a class="btn btn-info">Edit</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>DeleteCategory.InvokeAsync(Category))">Delete</button>
    </div>
</div>

